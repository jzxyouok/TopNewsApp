<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  android:gravity="center_horizontal"
>
    <!--android:text="登录今日头条"-->
    <include layout="@layout/include_head_login"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_tip_mobile"/>

            <EditText
                android:id="@+id/et_number_phone_login"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:hint="请输入手机号"
                android:background="@null"
                android:maxLines="1"/>
        </LinearLayout>

        <include layout="@layout/inclule_underline"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_tip_pwd"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/et_pwd_phone_login"
                android:hint="请输入密码"
                android:background="@null"
                android:maxLines="1"/>
        </LinearLayout>

        <include layout="@layout/inclule_underline"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_register_phone_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册账号"/>
            <View android:layout_width="0dp"
                  android:layout_height="1dp"
                  android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_pwd_phone_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="忘记密码"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_login_phone_login"
            android:layout_width="194dp"
            android:layout_height="36dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_register"
            android:text="登录"
            android:layout_gravity="center_horizontal"
            android:textColor="#FD3131"
            android:textSize="20sp"
        />
    </LinearLayout>
</LinearLayout>
